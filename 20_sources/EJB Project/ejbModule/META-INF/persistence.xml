<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="EJB Project" transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<jta-data-source>jdbc/__default</jta-data-source>
		<class>de.rowbuddy.entities.Member</class>
		<class>de.rowbuddy.entities.Route</class>
		<class>de.rowbuddy.entities.Trip</class>
		<class>de.rowbuddy.entities.Boat</class>
		<class>de.rowbuddy.entities.TripMember</class>
		<class>de.rowbuddy.entities.Role</class>
		<class>de.rowbuddy.entities.BoatDamage</class>
		<class>de.rowbuddy.entities.BoatReservation</class>
		<class>de.rowbuddy.entities.GpsPoint</class>
		<properties>
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
		</properties>
	</persistence-unit>
</persistence>
